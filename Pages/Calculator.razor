@page "/calculator"

<h1>Calculator</h1>

Number 1: <input type="number" @bind="@num1" />
<br>
Number 2: <input type="number" @bind="@num2" />
<br>
<br>
<button class="btn btn-primary" @onclick="@Sum">Calculate sum</button>
<br>
<h2>Sum: @sum</h2>

@code {
    decimal sum = 0;
    decimal num1 = 0;
    decimal num2 = 0;

    public void Sum()
    {
      sum = num1 + num2;
    }
}
